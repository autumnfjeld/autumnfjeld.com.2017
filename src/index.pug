doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    //if IE
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{app.general.firstName} #{app.general.lastName}

    link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,700', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='vendor/font-awesome/css/font-awesome.min.css')
    link(href='css/styles.min.css?v1.1.1', rel='stylesheet')
    //link(href='css/styles.css', rel='stylesheet')
    //if lt IE 9
      script(src='vendor/html5shiv.js')
      script(src='vendor/respond.min.js')
    link(rel='shortcut icon', href='favicon-greenbubble.ico', type='image/x-icon')
    link(rel='icon', href='favicon-greenbubble.ico', type='image/x-icon')
    link(href='img/apple-touch-icon-144.png', rel='apple-touch-icon-precomposed', sizes='144x144')
    link(href='img/apple-touch-icon-114-precomposed.png', rel='apple-touch-icon-precomposed', sizes='114x114')
    link(href='img/apple-touch-icon-72-precomposed.png', rel='apple-touch-icon-precomposed', sizes='72x72')
    link(href='img/apple-touch-icon-57.png', rel='apple-touch-icon-precomposed')

  body(data-spy='scroll', data-target='#side-menu')
    div#page-loader.loader
      .loading-wrapper
        .tp-loader.spinner
        .side-menu-name
          | Autumn
          strong Fjeld
        p.side-menu-job #{app.general.careerTitle}

    include nav.pug

    section#content-body.container.animated
      .row
        // Header color stripes
        .col-md-10.col-sm-10.col-md-offset-2.col-sm-offset-1.clearfix.top-colors
          .top-color.top-color1
          .top-color.top-color4
          .top-color.top-color3
          .top-color.top-color1
          .top-color.top-color4
        // Begining of content
        .col-md-10.col-sm-10.col-md-offset-2.col-sm-offset-1.resume-container
          //Header buttons were here, keep as place holder otherwise screws up responsive stuff
          .row
            .header-buttons.col-md-10.col-md-offset-1

          include intro.pug
          div.timeline-wrap
            div.timeline-b
              include profile.pug
              include work-experience.pug
              include education.pug
              include skills.pug
              include fun-facts.pug
              include contact
              include the-end
          footer#footer.row
            p.small Updated 18 May 2017
            p.small.text-muted Template adapted from
              a(href='https://themeforest.net/item/vertica-retina-ready-resume-cv-portfolio/8536870') Vertica


    script(src='build.js?v1.1.1')
